{
  "name": "react_on_rails",
  "description": "example of server rendering",
  "repository": {
    "type": "git",
    "url": "https://github.com/shakacode/react_on_rails.git"
  },
  "main": "js/app.js",
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "@rails/webpacker": "^4.0.7",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "core-js": "2",
    "es5-shim": "^4.5.9",
    "extract-text-webpack-plugin": "^3.0.0",
    "history": "^4.6.3",
    "lodash": "^4.17.4",
    "nps": "^5.9.3",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "^4.3.6",
    "react-on-rails": "11.2.2",
    "react-proptypes": "^1.0.0",
    "react-redux": "^5.0.5",
    "react-router": "^3.2.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.2.0",
    "sass-resources-loader": "^2.0.0",
    "webpack-cli": "^3.3.4",
    "webpack-merge": "^4.1.5"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-shakacode": "^16.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "fbjs": "^1.0.0",
    "jsdom": "^12.2.0",
    "preload-webpack-plugin": "^3.0.0-alpha.1",
    "prettier": "^1.14.3",
    "prettier-eslint-cli": "^4.7.1",
    "tape": "^4.7.0",
    "webpack-dev-server": "^3.2.1"
  },
  "browser": {
    "fs": false
  },
  "scripts": {
    "postinstall": "yarn link react-on-rails",
    "lint": "cd client && yarn run lint",
    "test": "yarn run build:test && yarn run lint && rspec",
    "build:test": "yarn run build:test:client && yarn run build:test:server",
    "build:clean": "rm -rf public/webpack || true",
    "build:test:client": "RAILS_ENV=test NODE_ENV=test bin/webpack ",
    "build:test:server": "RAILS_ENV=test NODE_ENV=test bin/webpack-dev-server ",
    "build:dev:client": "RAILS_ENV=development NODE_ENV=development bin/webpack",
    "build:dev:server": "RAILS_ENV=development NODE_ENV=development bin/webpack-dev-server",
    "build:production:client": "RAILS_ENV=development NODE_ENV=production bin/webpack",
    "build:production:server": "RAILS_ENV=development NODE_ENV=production bin/webpack-dev-server",
    "build:production": "yarn run build:production:server && yarn run build:production:client",
    "hot-assets": "NODE_ENV=development babel-node server-rails-hot.js"
  }
}
